%div(align="center")
  .header_home
    %h1 <a href="/"><img src="/images/MilkodeIcon135.png" alt="milkode-icon" border="0" height="135px"/></a> Milkode <font class="version">#{@version}</font>

  .content
    %ul#filelist(style="text-align: left; list-style: none outside none; width: 350px;")
      - project_list.each do |v|
        %li.result-file
          = file_or_dirimg(v[1])
          %a(href="#{Mkurl.new('/home/' + v[0], params).inherit_query_shead}")= File.basename v[0]
    %form(method="post" action="/git-append")
      %div
        %input(name="url" type="text" size="30" placeholder="git URL")
        %input(type="submit" value="追加")
  
  .footer_home
    <a href="/home">#{@package_num}</a>のパッケージ<br>
    <a href="/home?query=f:*">#{@file_num}</a>のファイル<br>
    <a href="/help">ヘルプ</a> , 
    <a href="http://milkode.ongaeshi.me">milkodeについて</a>
